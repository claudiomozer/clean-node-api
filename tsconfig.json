{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "rootDirs": [ "src", "test" ],
        "baseUrl": "src",
        "paths": {
            "@/tests/*": ["../tests/*"],
            "@/*": ["*"]
        }
    },
    "include": [
        "src", "tests"
    ],
    "exclude": []
}